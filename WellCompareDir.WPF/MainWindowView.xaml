<Window x:Class="WellCompareDir.WPF.MainWindowView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:sys="clr-namespace:System;assembly=mscorlib"
        xmlns:julmar="clr-namespace:JulMar.Windows"
        xmlns:Framework="clr-namespace:Framework.Behaviors;assembly=Framework"
        xmlns:i="clr-namespace:System.Windows.Interactivity;assembly=System.Windows.Interactivity"
        xmlns:Comparer="clr-namespace:WellCompareDir.Comparer;assembly=WellCompareDir.Comparer"
        xmlns:local="clr-namespace:WellCompareDir.WPF"
        Title="WellCompareDir" Width="750" Height="550" WindowStartupLocation="CenterScreen" WindowState="Maximized">

    <i:Interaction.Behaviors>
        <Framework:AutoWireUpViewModelBehavior />
    </i:Interaction.Behaviors>

    <!--<Window.CommandBindings>
        <CommandBinding Command="NextFile" CanExecute="CanNextFile" Executed="NextFile" />
        <CommandBinding Command="NextMatchingFile" CanExecute="Can" Executed="NextMatchingFile" />
        <CommandBinding Command="UseLeftFile" CanExecute="CanUseLeftFile" Executed="UseLeftFile" />
        <CommandBinding Command="UseRightFile" CanExecute="CanUseRightFile" Executed="UseRightFile" />
    </Window.CommandBindings>-->

    <Window.InputBindings>
        <local:RelayKeyBinding Key="Up" Modifiers="Control" CommandBinding="{Binding PreviousFileCommand}"/>
        <local:RelayKeyBinding Key="Down" Modifiers="Control" CommandBinding="{Binding NextFileCommand}"/>
        <local:RelayKeyBinding Key="Space" Modifiers="Control" CommandBinding="{Binding NextFileCommand}"/>
        <local:RelayKeyBinding Key="Left" Modifiers="Control" CommandBinding="{Binding UseLeftFileCommand}"/>
        <local:RelayKeyBinding Key="Right" Modifiers="Control" CommandBinding="{Binding UseRightFileCommand}"/>
        <!--<local:RelayKeyBinding Key="Down" Modifiers="Alt" CommandBinding="{Binding NextMatchingFileCommand}"/>-->
    </Window.InputBindings>

    <Window.Resources>
        <DataTemplate x:Key="fileCompareTemplate">
            <!--DataType="{x:Type Comparer:FileInfoWithCompareResult}"-->
            <TextBlock Name="text" Text="{Binding Path=DisplayName}" />
            <!--<CheckBox IsChecked="{Binding Path=IsUnique}" Content="{Binding Path=DisplayName}" />-->

            <DataTemplate.Triggers>
                <DataTrigger Binding="{Binding Path=IsUnique}">
                    <DataTrigger.Value>
                        <sys:Boolean>False</sys:Boolean>
                    </DataTrigger.Value>
                    <Setter TargetName="text" Property="Background" Value="Yellow"/>
                </DataTrigger>
            </DataTemplate.Triggers>
        </DataTemplate>
    </Window.Resources>

    <DockPanel Margin="10">

        <!--<Menu>
            <MenuItem Header="File"></MenuItem>
        </Menu>-->

        <!--<StatusBar Name="windowStatusBar" DockPanel.Dock="Bottom">
            <StatusBarItem>
                <TextBlock Text="{Binding Status}" />
            </StatusBarItem>
        </StatusBar>-->

        <StackPanel DockPanel.Dock="Bottom" Orientation="Horizontal">
            <StackPanel.Resources>
                <Style TargetType="{x:Type Button}">
                    <Setter Property="Margin" Value="5,5,5,5" />
                </Style>
            </StackPanel.Resources>
        </StackPanel>

        <ComboBox IsEditable="True" Grid.Row="0" Grid.Column="0" Margin="0,5,0,0" Text="{Binding OutputDirectoryPath}" DockPanel.Dock="Bottom"/>

        <Grid Height="Auto" DockPanel.Dock="Top">
            <Grid.Resources>
                <!--<julmar:DeferredBinder x:Key="directoryPathLeftValue" Source="{Binding LeftDirectoryPath, Mode=OneWayToSource}" Timeout="1" />-->
                <!--<julmar:DeferredBinder x:Key="directoryPathRightValue" Source="{Binding RightDirectoryPath, Mode=OneWayToSource}" Timeout="1" />-->
            </Grid.Resources>

            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="5" />
                <RowDefinition Height="100" />
                <RowDefinition Height="5" />
                <RowDefinition Height="*" />
                <RowDefinition Height="5" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="5" />
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition />
                <ColumnDefinition Width="5" />
                <ColumnDefinition />
            </Grid.ColumnDefinitions>

            <ComboBox IsEditable="True" Grid.Row="0" Grid.Column="0" Text="{Binding LeftDirectoryPath}" />
            <ComboBox IsEditable="True" Grid.Row="0" Grid.Column="2" Text="{Binding RightDirectoryPath}" />

            <ListBox Name="leftFiles" Grid.Row="2" Grid.Column="0"
                ItemsSource="{Binding LeftFiles}"
                ItemTemplate="{StaticResource fileCompareTemplate}"
                SelectedIndex="{Binding SelectedFileIndex}">
            </ListBox>
            <ListBox Name="rightFiles" Grid.Row="2" Grid.Column="2"
                ItemsSource="{Binding RightFiles}"
                ItemTemplate="{StaticResource fileCompareTemplate}"
                SelectedIndex="{Binding SelectedFileIndex}">
            </ListBox>

            <Border BorderBrush="AliceBlue" BorderThickness="2" Grid.Row="4" Grid.Column="0">
                <Image Name="leftImage" Source="{Binding LeftImageSource}" Width="{Binding ElementName=Container,Path=ActualWidth}" />
            </Border>
            <Border BorderBrush="AliceBlue" BorderThickness="2" Grid.Row="4" Grid.Column="2">
                <Image Name="rightImage" Source="{Binding RightImageSource}" Width="{Binding ElementName=Container,Path=ActualWidth}" />
            </Border>

            <Grid Grid.Row="6" Grid.Column="0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition />
                </Grid.RowDefinitions>

                <Label Grid.Row="0" Grid.Column="0">Dimensions</Label>
                <Label Grid.Row="0" Grid.Column="1" Content="{Binding LeftImageDimensions}"/>
                <Label Grid.Row="0" Grid.Column="2">Size</Label>
                <Label Grid.Row="0" Grid.Column="3" Content="{Binding LeftFileSize}"/>
            </Grid>

            <Grid Grid.Row="6" Grid.Column="2">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition />
                </Grid.RowDefinitions>

                <Label Grid.Row="0" Grid.Column="0">Dimensions</Label>
                <Label Grid.Row="0" Grid.Column="1" Content="{Binding RightImageDimensions}"/>
                <Label Grid.Row="0" Grid.Column="2">Size</Label>
                <Label Grid.Row="0" Grid.Column="3" Content="{Binding RightFileSize}"/>
            </Grid>

            <Button Command="{Binding UseLeftFileCommand}" Grid.Row="8" Grid.Column="0">Use left image</Button>
            <Button Command="{Binding UseRightFileCommand}" Grid.Row="8" Grid.Column="2">Use right image</Button>
        </Grid>
    </DockPanel>
</Window>
