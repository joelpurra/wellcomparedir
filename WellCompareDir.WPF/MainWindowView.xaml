<Window x:Class="WellCompareDir.WPF.MainWindowView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:sys="clr-namespace:System;assembly=mscorlib"
        xmlns:julmar="clr-namespace:JulMar.Windows"
        xmlns:Framework="clr-namespace:Framework.Behaviors;assembly=Framework"
        xmlns:i="clr-namespace:System.Windows.Interactivity;assembly=System.Windows.Interactivity"
        xmlns:Comparer="clr-namespace:WellCompareDir.Comparer;assembly=WellCompareDir.Comparer"
        Title="WellCompareDir" Height="305" Width="438">

    <i:Interaction.Behaviors>
        <Framework:AutoWireUpViewModelBehavior />
    </i:Interaction.Behaviors>

    <Window.Resources>
        <DataTemplate x:Key="fileCompareTemplate">
            <!--DataType="{x:Type Comparer:FileInfoWithCompareResult}"-->
            <TextBlock Name="text" Text="{Binding Path=DisplayName}" />
            <!--<CheckBox IsChecked="{Binding Path=IsUnique}" Content="{Binding Path=DisplayName}" />-->

            <DataTemplate.Triggers>
                <DataTrigger Binding="{Binding Path=IsUnique}">
                    <DataTrigger.Value>
                        <sys:Boolean>False</sys:Boolean>
                    </DataTrigger.Value>
                    <Setter TargetName="text" Property="Background" Value="Yellow"/>
                </DataTrigger>
            </DataTemplate.Triggers>
        </DataTemplate>
    </Window.Resources>

    <StackPanel>
        <!--<Menu>
            <MenuItem Header="File"></MenuItem>
        </Menu>-->

        <Grid ShowGridLines="True">
            <Grid.Resources>
                <!--<julmar:DeferredBinder x:Key="directoryPathLeftValue" Source="{Binding LeftDirectoryPath, Mode=OneWayToSource}" Timeout="1" />-->
                <!--<julmar:DeferredBinder x:Key="directoryPathRightValue" Source="{Binding RightDirectoryPath, Mode=OneWayToSource}" Timeout="1" />-->
            </Grid.Resources>

            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"></RowDefinition>
                <RowDefinition Height="100"></RowDefinition>
                <RowDefinition Height="*"></RowDefinition>
                <RowDefinition Height="Auto"></RowDefinition>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition></ColumnDefinition>
                <ColumnDefinition></ColumnDefinition>
            </Grid.ColumnDefinitions>

            <ComboBox IsEditable="True" Grid.Row="0" Grid.Column="0" Text="{Binding LeftDirectoryPath}" />
            <ComboBox IsEditable="True" Grid.Row="0" Grid.Column="1" Text="{Binding RightDirectoryPath}" />

            <ListBox Grid.Row="1" Grid.Column="0"
                ItemsSource="{Binding LeftFiles}"
                ItemTemplate="{StaticResource fileCompareTemplate}">
            </ListBox>
            <ListBox Grid.Row="1" Grid.Column="1"
                ItemsSource="{Binding RightFiles}"
                ItemTemplate="{StaticResource fileCompareTemplate}">
            </ListBox>

            <Image Grid.Row="2" Grid.Column="0" />
            <Image Grid.Row="2" Grid.Column="1" />
        </Grid>

        <StatusBar Name="windowStatusBar" Height="Auto">
            <StatusBarItem>
                <TextBlock Text="{Binding Status}" />
            </StatusBarItem>
        </StatusBar>
    </StackPanel>
</Window>
